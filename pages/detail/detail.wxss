.newsDetail{
  padding: 30rpx 20rpx;
}
.detailHead{
  height: auto;
  font-size: 50rpx;
  color: #000
}
.newsSource{
  height: auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 40rpx;
}
.sourceLeft{
  width: auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.sourceLeft image{
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}
.sourceInfo{
  height: 90rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.sourceInfo .sourceTitle{
  font-size: 34rpx;
  color: #000;
  font-weight: bold;
}
.sourceInfo text{
  font-size: 12px;
  color: #999;
}
.sourceRight{
  width: 120rpx;
  height: 60rpx;
  color: #fff;
  font-size: 30rpx;
  text-align: center;
  background: #d43d3d;
  line-height: 60rpx;
  font-weight: 600;
  border-radius: 6rpx;
}
.sourceRight2{
  width: 120rpx;
  height: 60rpx;
  color: #333;
  font-size: 30rpx;
  text-align: center;
  background: #f1efef;
  line-height: 60rpx;
  font-weight: 600;
  border: 1px solid #333;
  border-radius: 6rpx;
}
.footer{
  width: 100%;
  height: auto;
  position: fixed;
  left: 0;
  bottom: 0;
}